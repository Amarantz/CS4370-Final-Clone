{% extends '/app.twig' %}
{% block content %}
    <script>
        var container = document.getElementById('f_detail');
        var quill = new Quill(container, {
            theme: 'bubble'   // Specify theme in configuration
        });
    </script>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Question</div>
                <div class="panel-body">
                    <form action="{{ path_for('question.form') }}" method="post">
                        <div class="form-group {{ errors.f_question ? ' has-error': ''}}">
                            <label for="f_question">Question</label>
                            <input type="text" name="f_question" id="f_question" class="form-control" required>
                        </div>
                        <div class="form-group{{ errors.f_detail ? ' has-error': ''}}">
                            <label for="f_detail">Details</label>
                            <textarea name="f_detail" id="f_detail" class="form-control" rows="15"></textarea>
                        </div>
                        <button type="submit" class="btn btn-default">Submit</button>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}