{% extends '/app.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Login</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.login') }}" method="post">
                        <div class="form-group {{ errors.f_username ? ' has-error': ''}}">
                            <label for="f_username">Email</label>
                            <input type="email" name="f_username" id="f_username"  placeholder="you@domain.com" class="form-control" required>
                            {% if error.f_username %}

                            {% endif %}
                        </div>
                        <div class="form-group">
                            <label for="f_password">Password</label>
                            <input type="password" name="f_password" id="f_password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>
                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}