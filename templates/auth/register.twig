{% extends'/app.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Reigstration</div>
                <div class="panel-body">
                    <form action="{{ path_for('auth.register') }}" method="post">
                        <div class="form-group">
                            <label for="f_username">Email</label>
                            <input type="email" name="f_username" id="f_username"  placeholder="you@domain.com" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="f_firstname">Firstname</label>
                            <input type="text" name="f_firstname" id="f_firstname" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="f_lastname">Lastname</label>
                            <input type="text" name="f_lastname" id="f_lastname" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="f_password">Password</label>
                            <input type="password" name="f_password" id="f_password" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="f_confirmPassword">Confirm Password</label>
                            <input type="password" name="f_confirmPassword" id="f_confirmPassword" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-default">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}